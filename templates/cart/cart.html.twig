{% extends 'base.html.twig' %}

{% block title %}Panier - E-Discount{% endblock %}

{% block page_stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/styles/cart.css') }}">
{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}

    <main class="cart-container">
        <div class="cart-progress">
            <div class="progress-step active">
                <span class="step-number">1</span>
                <span class="step-label">Panier</span>
            </div>
            <div class="progress-step">
                <span class="step-number">2</span>
                <span class="step-label">Authentification</span>
            </div>
            <div class="progress-step">
                <span class="step-number">3</span>
                <span class="step-label">Livraison</span>
            </div>
            <div class="progress-step">
                <span class="step-number">4</span>
                <span class="step-label">Paiement</span>
            </div>
        </div>

        <div class="cart-content">
            <div class="cart-items">
                <h1>Panier</h1>
                
                <div class="cart-header">
                    <span class="header-product">PRODUIT</span>
                    <span class="header-price">PRIX UNITAIRE</span>
                    <span class="header-quantity">QUANTITÉ</span>
                    <span class="header-total">PRIX TOTAL</span>
                </div>

                <div class="cart-item">
                    <div class="item-info">
                        <img src="{{ asset('images/placeholder.jpg') }}" alt="Maillot de sport">
                        <div class="item-details">
                            <h3>NIKE</h3>
                            <p>Maillot de sport Dri-FIT - Performance respirante</p>
                            <p>Couleur : Noir</p>
                            <p>Taille : M</p>
                            <div class="item-actions">
                                <button class="modify-btn">
                                    <i class="fas fa-edit"></i> Modifier
                                </button>
                                <button class="save-btn">
                                    <i class="fas fa-heart"></i> Acheter plus tard
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="item-quantity">
                        <input type="number" value="1" min="1">
                    </div>
                    <div class="item-total">39,99€</div>
                    <button class="remove-item">×</button>
                </div>

                <div class="cart-item">
                    <div class="item-info">
                        <img src="{{ asset('images/placeholder.jpg') }}" alt="Short de sport">
                        <div class="item-details">
                            <h3>ADIDAS</h3>
                            <p>Short de sport Climalite - Confort optimal</p>
                            <p>Couleur : Gris</p>
                            <p>Taille : L</p>
                            <div class="item-actions">
                                <button class="modify-btn">
                                    <i class="fas fa-edit"></i> Modifier
                                </button>
                                <button class="save-btn">
                                    <i class="fas fa-heart"></i> Acheter plus tard
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="item-quantity">
                        <input type="number" value="1" min="1">
                    </div>
                    <div class="item-total">34,99€</div>
                    <button class="remove-item">×</button>
                </div>
            </div>

            <div class="cart-summary">
                <h2>Récapitulatif</h2>
                <div class="summary-line">
                    <span>Sous-total (2 articles)</span>
                    <span>74,98€</span>
                </div>
                <div class="summary-line">
                    <span>Livraison</span>
                    <span>voir à l'étape suivante</span>
                </div>
                <div class="summary-total">
                    <span>Total</span>
                    <span class="total-price">74,98€</span>
                    <span class="tax-included">TVA incluse</span>
                </div>

                <button class="checkout-btn">Poursuivre la commande</button>

                <div class="promo-code">
                    <button class="promo-toggle">
                        Ajouter un code promo
                        <i class="fas fa-chevron-down"></i>
                    </button>
                </div>

                <div class="cart-benefits">
                    <div class="benefit-item">
                        <i class="fas fa-truck"></i>
                        <p>Livraison GRATUITE en magasin et en point relais</p>
                    </div>
                    <div class="benefit-item">
                        <i class="fas fa-undo"></i>
                        <p>Retours GRATUITS pendant 365 jours</p>
                    </div>
                    <div class="benefit-item">
                        <i class="fas fa-recycle"></i>
                        <p>Reprise de vos produits usagés conformément à l'article 7.7 des Conditions Générales de Vente</p>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
