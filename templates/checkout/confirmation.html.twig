{% extends 'base.html.twig' %}

{% block title %}Confirmation de commande - E-Discount{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/checkout.css') }}">
{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}

    <main class="checkout-container">
        <div class="checkout-progress">
            <div class="progress-step">
                <div class="step-number">1</div>
                <div class="step-label">Panier</div>
            </div>
            <div class="progress-step">
                <div class="step-number">2</div>
                <div class="step-label">Livraison</div>
            </div>
            <div class="progress-step active">
                <div class="step-number">3</div>
                <div class="step-label">Confirmation</div>
            </div>
        </div>

        <div class="confirmation-content">
            <div class="confirmation-message">
                <i class="fas fa-check-circle"></i>
                <h2>Commande confirmée !</h2>
                <p>Votre paiement a été traité avec succès.</p>
                <p class="order-number">Numéro de commande : #{{ order_number }}</p>
                
                <div class="confirmation-details">
                    <h3>Détails de la livraison</h3>
                    <p>{{ shipping_address.fullname }}</p>
                    <p>{{ shipping_address.address }}</p>
                    <p>{{ shipping_address.postal }} {{ shipping_address.city }}</p>
                </div>

                <div class="confirmation-actions">
                    <a href="{{ path('home') }}" class="continue-shopping">Retour à l'accueil</a>
                </div>
            </div>

            <div class="order-summary">
                <h2>Récapitulatif de la commande</h2>
                <div class="summary-items">
                    {% for item in cart_items %}
                        <div class="summary-item">
                            <span>{{ item.article.name }}</span>
                            <span>{{ item.article.price }}€</span>
                        </div>
                    {% endfor %}
                </div>
                <div class="summary-total">
                    <div class="subtotal">
                        <span>Sous-total</span>
                        <span>{{ total }}€</span>
                    </div>
                    <div class="shipping">
                        <span>Livraison</span>
                        <span>5.99€</span>
                    </div>
                    <div class="total">
                        <span>Total</span>
                        <span>{{ total + 5.99 }}€</span>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %} 