{% extends 'base.html.twig' %}

{% block title %}Paramètres du profil{% endblock %}

{% block page_stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/profile.css') }}">
{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}

    <div class="profile-container">
        <div class="profile-header">
            <h1 class="profile-title">Paramètres du profil</h1>
            <a href="{{ path('app_logout') }}" class="logout-button">
                <svg xmlns="http://www.w3.org/2000/svg" class="button-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                Déconnexion
            </a>
        </div>

        <div class="profile-card">
            <div class="profile-picture-container">
                <div class="profile-picture">
                    <img src="{{ asset('image/' ~ user.profilePicture) }}" alt="Photo de profil">
                    <div class="upload-overlay">
                        <svg xmlns="http://www.w3.org/2000/svg" class="upload-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                    </div>
                </div>
            </div>

            <div class="info-section">
                <h2>Informations personnelles</h2>
                <form method="POST" class="profile-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">
                                <svg xmlns="http://www.w3.org/2000/svg" class="input-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                Prénom
                            </label>
                            <input type="text" id="firstName" name="firstName" value="{{ user.firstName }}" placeholder="Ethan">
                        </div>

                        <div class="form-group">
                            <label for="lastName">
                                <svg xmlns="http://www.w3.org/2000/svg" class="input-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                Nom
                            </label>
                            <input type="text" id="lastName" name="lastName" value="{{ user.lastName }}" placeholder="Dufour-Caillasse">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email">
                            <svg xmlns="http://www.w3.org/2000/svg" class="input-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            Email
                        </label>
                        <input type="email" id="email" name="email" value="{{ user.email }}" placeholder="ethan.caillasse@exemple.fr">
                    </div>

                    <div class="form-group">
                        <label for="phone">
                            <svg xmlns="http://www.w3.org/2000/svg" class="input-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            Téléphone
                        </label>
                        <input type="tel" id="phone" name="phone" value="{{ user.phone }}" placeholder="06 29 15 26 74">
                    </div>

                    <button type="submit" class="save-button">
                        <svg xmlns="http://www.w3.org/2000/svg" class="button-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"/>
                        </svg>
                        Enregistrer les modifications
                    </button>
                </form>
            </div>

            <div class="info-section">
                <h2>Informations d'adresse</h2>
                <form method="POST" action="{{ path('app_profile_address') }}" class="profile-form">
                    <div class="form-group">
                        <label for="street">
                            <svg xmlns="http://www.w3.org/2000/svg" class="input-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                            </svg>
                            Rue
                        </label>
                        <input type="text" id="street" name="street" value="{{ user.street }}" placeholder="16 rue edouard branly">
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="city">
                                <svg xmlns="http://www.w3.org/2000/svg" class="input-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                </svg>
                                Ville
                            </label>
                            <input type="text" id="city" name="city" value="{{ user.city }}" placeholder="Le Bouscat">
                        </div>

                        <div class="form-group">
                            <label for="postalCode">
                                <svg xmlns="http://www.w3.org/2000/svg" class="input-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                                Code postal
                            </label>
                            <input type="text" id="postalCode" name="postalCode" value="{{ user.postalCode }}" placeholder="33110">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="country">
                            <svg xmlns="http://www.w3.org/2000/svg" class="input-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"/>
                            </svg>
                            Pays
                        </label>
                        <select id="country" name="country" class="form-control">
                            <option value="">Sélectionnez un pays</option>
                            <option value="FR" {{ user.country == 'FR' ? 'selected' : '' }}>France</option>
                            <option value="BE" {{ user.country == 'BE' ? 'selected' : '' }}>Belgique</option>
                            <option value="CH" {{ user.country == 'CH' ? 'selected' : '' }}>Suisse</option>
                            <option value="LU" {{ user.country == 'LU' ? 'selected' : '' }}>Luxembourg</option>
                            <option value="DE" {{ user.country == 'DE' ? 'selected' : '' }}>Allemagne</option>
                            <option value="IT" {{ user.country == 'IT' ? 'selected' : '' }}>Italie</option>
                            <option value="ES" {{ user.country == 'ES' ? 'selected' : '' }}>Espagne</option>
                            <option value="PT" {{ user.country == 'PT' ? 'selected' : '' }}>Portugal</option>
                            <option value="GB" {{ user.country == 'GB' ? 'selected' : '' }}>Royaume-Uni</option>
                            <option value="NL" {{ user.country == 'NL' ? 'selected' : '' }}>Pays-Bas</option>
                            <option value="AT" {{ user.country == 'AT' ? 'selected' : '' }}>Autriche</option>
                            <option value="IE" {{ user.country == 'IE' ? 'selected' : '' }}>Irlande</option>
                        </select>
                    </div>

                    <button type="submit" class="save-button">
                        <svg xmlns="http://www.w3.org/2000/svg" class="button-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"/>
                        </svg>
                        Enregistrer l'adresse
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %} 