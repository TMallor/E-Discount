{% extends 'base.html.twig' %}

{% block title %}Page non trouvée - E-Discount{% endblock %}

{% block page_stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/styles/error404.css') }}">
{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    
    <main class="error-content">
        <div class="error-container">
            <div class="error-number">
                <span class="first-digit">4</span>04
            </div>
            <div class="error-text">
                <h2>Page non trouvée</h2>
                <p>La page que vous recherchez semble avoir disparu</p>
                <a href="{{ path('home') }}" class="back-home">Retour à l'accueil</a>
            </div>
        </div>
    </main>
{% endblock %} 