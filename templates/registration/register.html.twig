{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block page_stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/styles/register.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,800" rel="stylesheet">
{% endblock %}

{% block body %}
   {% include 'header.html.twig' %}

    <div class="container" id="container">
        <div class="form-container sign-up-container">
            {{ form_start(registrationForm, {'attr': {'class': 'registration-form'}}) }}
                <h1>Cr√©er un compte</h1>
            
                {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
                
                <div class="terms-container">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms, "J'accepte les conditions d'utilisation") }}
                </div>
                
                <button type="submit">S'INSCRIRE</button>
            {{ form_end(registrationForm) }}
        </div>
        
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1>Bonjour !</h1>
                    <p>Entrez vos informations personnelles et commencez votre voyage avec nous</p>
                    <a href="{{ path('app_login') }}" class="ghost">Connexion</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}